:root {
    --header-height: 3.3125rem;
    --sidebar-width: 3.25rem;
    --light-color: #3b4c54;
    --light-second-color: #727374;
    --light-background: #3b4b54;
    --light-second-background: #fafafb;
    --light-third-background: #f2f2f2;
    --light-fourth-background: #b0b0b0;
    --light-hover-links: #47606b;
    --light-border-color: #e9e9e9;
    --dark-color: #ffffff;
    --dark-second-color: #ecf0f3;
    --dark-background: #454545;
    --dark-second-background: #333333;
    --dark-third-background: #3b3b3b;
    --dark-fourth-background: #4d4d4d;
    --dark-hover-links: #545454;
    --dark-border-color: #222028;
    --nav-dropdown: #2e2e2e;
}

.light {
    --main-color: var(--light-color);
    --second-color: var(--light-second-color);
    --main-bg-color: var(--light-background);
    --second-bg-color: var(--light-second-background);
    --third-bg-color: var(--light-third-background);
    --fourth-bg-color: var(--light-fourth-background);
    --hover-links: var(--light-hover-links);
    --border-color: var(--light-border-color);
    --placeholder-color: #b0b0b0aa;
}

.dark {
    --main-color: var(--dark-color);
    --second-color: var(--dark-second-color);
    --main-bg-color: var(--dark-background);
    --second-bg-color: var(--dark-second-background);
    --third-bg-color: var(--dark-third-background);
    --fourth-bg-color: var(--dark-fourth-background);
    --hover-links: var(--dark-hover-links);
    --border-color: var(--dark-border-color);
    --placeholder-color: #4d4d4daa;
}